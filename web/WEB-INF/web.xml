<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainMenuDispatcher</servlet-name>
        <servlet-class>controller.MainMenuDispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexDispatcher</servlet-name>
        <servlet-class>controller.IndexDispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ElectoralCensusServlet</servlet-name>
        <servlet-class>controller.ElectoralCensusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnsubscribeServlet</servlet-name>
        <servlet-class>controller.UnsubscribeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VotationServlet</servlet-name>
        <servlet-class>controller.VotationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScrutinyServlet</servlet-name>
        <servlet-class>controller.ScrutinyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainMenuDispatcher</servlet-name>
        <url-pattern>/MainMenuDispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexDispatcher</servlet-name>
        <url-pattern>/IndexDispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ElectoralCensusServlet</servlet-name>
        <url-pattern>/ElectoralCensusServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnsubscribeServlet</servlet-name>
        <url-pattern>/UnsubscribeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VotationServlet</servlet-name>
        <url-pattern>/VotationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScrutinyServlet</servlet-name>
        <url-pattern>/ScrutinyServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
